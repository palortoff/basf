#!/bin/bash

do_has_no_option(){
    has_no_option $@
}

describe_has_no_option_options(){
    make_option --name "option" --short "o" --long "option" --desc "some option"
}

do_has_option(){
    has_option "first" $@ && echo "first"
    has_option "second" $@ && echo "second"
    has_option "third" $@ && echo "third"
    return 0
}

describe_has_option_options(){
    make_option --name "first" --short "f" --long "first" --desc "some first"
    make_option --name "second" --short "s" --long "second" --desc "some second"
    make_option --name "third" --short "t" --long "third" --desc "some third"
}

do_help_for_has_option(){
    print_help_action "has_option"
}

describe_options_with_params(){
    echo "help"
}
do_options_with_params(){
    if has_option "wo_param" $@; then
        echo "option without param"
        return 0
    fi

    local param=$(get_option_param "w_param" $@)
     [ ! -z ${param} ] && echo ${param}

    true
}

describe_options_with_params_options(){
       make_option --name "wo_param" --short "o" --long "wo_param"   --desc "options without parameter"
       make_option --name "w_param"  --short "w" --long "w_param"    --desc "options with parameter" --param "parameter"
}

do_help_for_options_with_params(){
    print_help_action "options_with_params"
}
